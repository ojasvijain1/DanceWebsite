extends base.pug

block scripts
  script(src="/static/script.js") 

block style 
    style 
      include ../static/style.css
      include ../static/styleContact.css

block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="post", class="myForm")
            input(type="text", class="myInput", name="name", placeholder="Name") 
            input(type="email", class="myInput", name="email", placeholder="Email") 
            input(type="password", class="myInput", name="password", placeholder="Password") 
            input(type="phone", class="myInput", name="phone", placeholder="Phone number") 
            input(type="address", class="myInput", name="address", placeholder="Address") 
            button(class="btn") 
